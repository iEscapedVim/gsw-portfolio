---
const { post } = Astro.props;
const {title, icon, excerpt} = post.data;
---
<div class="flex flex-col align-middle items-center justify-center text-center w-1/3">
    <a href={`/services/${post.slug}`}>
        <div class="border border-gray-300 rounded-full w-24 h-24 p-6">
            <img class="w-full" srcset={icon.src} alt={"An Icon Related To" + title} />
        </div>
        <div class="">
            <a href={`/services/${post.slug}/`}>
                <h3 class="m-2 font-bold text-lg">{title}</h3>
                <p class="text-gray-500">{excerpt.slice(0, 80)}</p>
            </a>
        </div>
    </a>
</div>