---
import { Icon } from 'astro-icon/components';
import Links from '@comps/general/links.astro';
import LogoIcon from '@imgs/fav.png';
---
<div class="navbar bg-base-100 shadow-gray-300 shadow-md">
    <div class="navbar-start">
      <div class="dropdown">
        <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
          </svg>
        </div>
        <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] w-72 mt-3 p-2 shadow">
            <Links />
        </ul>
      </div>
      <a href="/" class="flex flex-row items-center gap-2 normal-case text-xl font-semibold"><img src={LogoIcon.src} alt="GSW" width={32}/>GSW Solutions</a>
    </div>
    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal px-1 font-semibold">
        <Links />
      </ul>
    </div>
    <div class="navbar-end">
        <a href="https://facebook.com" class="m-2"><Icon name="line-md:facebook" width="18" height="18"/></a>
        <a href="https://x.com" class="m-2"><Icon name="line-md:twitter-filled" width="22" height="22"/></a>
        <a href="mailto:info@gswsolutions.co" class="m-2"><Icon name="line-md:email-alt-filled" width="22" height="22"/></a>
    </div>
  </div>