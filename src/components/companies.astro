---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
const allCompanies = await getCollection("companies");
---
<div class="w-full inline-flex flex-nowrap bg-[#282e35] py-12 overflow-hidden">
    <ul x-ref="logos" class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll">
        {allCompanies.map((p: any) => 
            <li class="text-gray-500">
                <Image src={p.data.companylogo} alt={p.data.companyname} class="w-auto h-10" />
            </li>
        )}
    </ul>
    <ul x-ref="logos" class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll" aria-hidden="true">
        {allCompanies.map((p: any) => 
            <li class="text-gray-500">
                <Image src={p.data.companylogo} alt={p.data.companyname} class="w-auto h-10" />
            </li>
        )}
    </ul>                
</div>